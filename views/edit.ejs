<%- include('partials/header') %>
<div class="ui container">
    <div class="ui huge header">Edit <%= data.title %></div>
        <form class="ui form" action="/blogs/<%= data._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Blog Title</label>
                <input 
                    type="text"
                    name="blog[title]" 
                    id="title" 
                    placeholder="Blog Title" 
                    required
                    value="<%= data.title %>"
                >
            </div>
            <div class="field">
                    <label>Image URL</label>
                    <input 
                        type="url" 
                        name="blog[url]" 
                        id="url" 
                        placeholder="http://your-image.jpg" 
                        required
                        value="<%= data.url %>"
                    >
            </div>
            <div class="field">
                <label>Blog Blody</label>
                <textarea 
                    name="blog[body]" 
                    id="body" 
                    placeholder="Enter you blog thoughts here..." 
                    required
                >
                <%= data.body %>
                </textarea>
            </div>
            <div class="ui buttons">
                <button class="ui button" id="cancel-button" onclick="gohome()">Cancel</button>
                <div class="or"></div>
                <button class="ui positive button">Submit</button>
            </div>
        </form>
</div>

<%- include('partials/footer') %>