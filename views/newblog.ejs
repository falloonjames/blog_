<%- include('partials/header') %>
<div class="ui container">
        <form class="ui form" action="/blogs" method="post">
            <div class="field">
                <label>Blog Title</label>
                <input type="text" name="title" id="title" placeholder="Blog Title" required>
            </div>
            <div class="field">
                    <label>Image URL</label>
                    <input type="url" name="url" id="url" placeholder="http://your-image.jpg" required>
            </div>
            <div class="field">
                <label>Blog Blody</label>
                <textarea type="text" name="body" id="body" placeholder="Enter you blod thoughts here..."></textarea>
            </div>
            <button class="ui button" type="submit" id="submit">Submit</button>
        </form>
</div>

<%- include('partials/footer') %>