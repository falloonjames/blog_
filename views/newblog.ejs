<%- include('partials/header') %>
<div class="ui container">
        <div class="ui ordered steps">
                <div class="active step">
                  <div class="content">
                    <div class="title">Add title</div>
                    <div class="description">Choose a name for your blog</div>
                  </div>
                </div>
                <div class="active step">
                  <div class="content">
                    <div class="title">Image URL</div>
                    <div class="description">Enter url of image</div>
                  </div>
                </div>
                <div class="active step">
                  <div class="content">
                    <div class="title">Write your post</div>
                    <div class="description">Enter your main text conent</div>
                  </div>
                </div>
              </div>
        <form class="ui form" action="/blogs" method="post">
            <div class="field">
                <label>Blog Title</label>
                <input type="text" name="blog[title]" id="title" placeholder="Blog Title" required>
            </div>
            <div class="field">
                    <label>Image URL</label>
                    <input type="url" name="blog[url]" id="url" placeholder="http://your-image.jpg" required>
            </div>
            <div class="field">
                <label>Blog Blody</label>
                <textarea name="blog[body]" id="body" placeholder="Enter you blog thoughts here..." required></textarea>
            </div>
            <div class="ui buttons">
                <button class="ui button" id="cancel-button" onclick="gohome()">Cancel</button>
                <div class="or"></div>
                <button class="ui positive button">Submit</button>
            </div>
        </form>
</div>

<%- include('partials/footer') %>